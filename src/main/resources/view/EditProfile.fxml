<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
    <Label text="Edit Profile" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <Label text="Username (cannot be changed)" />
    <TextField fx:id="usernameField" editable="false" />

    <Label text="First Name" />
    <TextField fx:id="firstNameField" />

    <Label text="Last Name" />
    <TextField fx:id="lastNameField" />

    <Label text="Password" />
    <PasswordField fx:id="passwordField" />

    <Button text="Save" onAction="#handleSave" />
    <Button text="Cancel" onAction="#handleCancel" />
</VBox>
