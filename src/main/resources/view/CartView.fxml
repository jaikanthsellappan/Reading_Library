<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" spacing="10" alignment="CENTER" prefWidth="400.0" prefHeight="400.0">
    <TableView fx:id="cartTable">
        <columns>
            <TableColumn fx:id="bookTitleColumn" text="Book Title" prefWidth="200"/>
            <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="100"/>
            <TableColumn fx:id="actionColumn" text="Actions" prefWidth="100"/>
        </columns>
    </TableView>
    <Button fx:id="checkoutButton" text="Checkout" />
</VBox>
