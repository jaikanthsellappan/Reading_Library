<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <Label fx:id="usernameLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="First Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Label fx:id="firstnameLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Last Name:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Label fx:id="lastnameLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Button text="Close" onAction="#closeWindow" GridPane.rowIndex="4" GridPane.columnIndex="1" />
</GridPane>
